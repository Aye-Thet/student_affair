<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>

    <title>Student Affairs</title>

  </head>
  <style media="screen">
    h3{
      color: black;
    }
    table{
      color: black;
    }
    #a1, h2{
      color: black;
    }
    th{
      background-color: darkgray;
    }
    td{
      background-color: powderblue;
    }
  </style>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/home" class="site_title"><i class="fa fa-leaf"></i> <span>Student Affairs</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <% include ../partial/menu_profile %>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <% include ../partial/sidebar %>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <% include ../partial/menu_footer %>
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <% include ../partial/top_nav %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <form id="frm" action="/admin/users/sublist" method="post">
            <input type="hidden" name="sub_id" value="<%= users.sub_id %>">

          <div class="">

            <div class="clearfix"></div>

            <div class="row">


              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2><b> <%= title %></b></h2>
                    <div class="clearfix"></div>
                  </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                          <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="datatable">
                              <thead>
                                <tr>
                                  <th style="width: 5px">No</th>
                                  <th>Major</th>
                                  <th>Year</th>
                                  <th>Subject Name</th>
                                  <th>Subject Code</th>
                                  <th style="width: 135px;">Action</th>
                                </tr>
                              </thead>

                              <tbody>
                                <% for(var i = 0; i < users.length; i++) { %>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= users[i].major %></td>
                                  <td><%= users[i].s_year %></td>
                                  <td><%= users[i].sub_name %></td>
                                  <td><%= users[i].sub_code %></td>
                                  <td>
                                    <button type="submit" class="btn btn-round btn-info"><a href="/admin/users/modifySub/<%= users[i].sub_id %>">Modify</a> </button>
                                    <button type="button" class="btn btn-round btn-danger"><a href="javascript:del()">Delete</a> </button>
                                  </td>
                                </tr>
                                <% } %>

                              </tbody>
                            </table>
                          </div>
                          <button type="button" class="btn btn-success"><a href="/admin/users/addSub">Add Subject</a> </button>
                        </div>
                    </div>


                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <% include ../partial/footer %>
        <!-- /footer content -->
      </div>
    </div>

    <% include ../partial/script %>

  </body>
  <script type="text/javascript">
    function del() {
      if(confirm('Are you sure?')){
        frm.submit();
      }
    }
    <%- (messages.info) ? `alert('${messages.info}')` : '' %>
  </script>
</html>
