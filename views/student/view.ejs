<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>

    <title>Student Affair | </title>

  </head>
  <style media="screen">
  h3{
    color: black;
  }
    #school{
      background-color: powderblue;
      margin-left: -10px;
      padding-top: 17px;
      padding-left: 20px;
      color: black;
      border-radius: 5px;
    }
    #family{
      margin-top: 20px;
      width: 500px;
      background-color: white;
      color: black;
      border-radius: 5px;
      padding-left: 20px;
      padding-top: 20px;
    }
    #personal{
      margin-top: 20px;
      width: 500px;
      background-color: white;
      color: black;
      border-radius: 5px;
      padding-left: 20px;
      padding-top: 20px;
    }
    h2{
      color: black;
    }
  </style>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title"><i class="fa fa-leaf"></i> <span>Student Affair</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <% include ../partial/menu_profile %>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <% include ../partial/sidebar %>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <% include ../partial/menu_footer %>
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <% include ../partial/top_nav %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <form id="frm" action="/admin/users/remove" method="post">
          <input type="hidden" name="old_stuid" value="<%= users.old_stuid %>">

          <div class="x_panel">
            <div id="mainbody">


              <div class="x_title">
                <h2>Student Detail Veiw</h2>
                <ul class="nav navbar-right panel_toolbox">
                  <h2> <%= users.academic %> &nbsp Academic Year </h2>
                </ul>
                <div class="clearfix"></div>
              </div>

                  <div class="x_content">

                        <div class="profile_img">
                          <img src="/images/<%= users.photo %>" width="150px" height="150px" alt="Avatar" title="Student Photo">
                        </div>

                            <div class="x_panel tile fixed_height_600" style="background-color:powderblue;" id="personal">
                              <div class="x_title">
                                <h2>Student Info</h2>
                                <div class="clearfix"></div>
                              </div>


                                <h2> Student ID: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.student_id %> </h2>
                                <h2> Name: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.name %></h2>
                                <h2> NRC Number: &nbsp <%= users.nrc_no %> </h2>
                                <h2> Birthdate: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.birthday %> </h2>
                                <h2> Gender: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.gender %> </h2>
                                <h2> Religion: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.religion %> </h2>
                                <h2> Nationality: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.nationality %> </h2><br><br>

                                <div class="x_title">
                                  <h2>Other Info</h2>
                                  <div class="clearfix"></div>
                                </div>

                                <h2> Address: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.address %> </h2>
                                <h2> Phone: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.phone_no %> </h2><br><br><br>


                              <div class="clearfix"></div>
                            </div>



                            <div class="x_panel tile fixed_height_600" style="background-color:powderblue;" id="family">
                              <div class="x_title">
                                <h2>Father</h2>
                                <div class="clearfix"></div>
                              </div>


                              <h2> Name: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.father_name %> </h2>
                              <h2> NRC Number: &nbsp <%= users.f_nrc %> </h2>
                              <h2> Occupation: &nbsp&nbsp&nbsp&nbsp&nbsp <%= users.f_occupation %> </h2>
                              <h2> Religion: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.f_religion %> </h2>
                              <h2> Nationality: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.f_nationality %> </h2><br>

                                <div class="x_title">
                                  <h2>Mother</h2>
                                  <div class="clearfix"></div>
                                </div>

                                <h2> Name: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.mother_name %> </h2>
                                <h2> NRC Number: &nbsp <%= users.m_nrc %> </h2>
                                <h2> Occupation: &nbsp&nbsp&nbsp&nbsp&nbsp <%= users.m_occupation %> </h2>
                                <h2> Religion: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.m_religion %> </h2>
                                <h2> Nationality: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.m_nationality %> </h2><br><br><p></p>


                              <div class="clearfix"></div>
                            </div>



                    <div class="col-md-12 col-sm-6 col-xs-12">
                      <div class="x_panel tile fixed_height_300" id="school">
                        <div class="x_title">
                          <h2>High School Info</h2>
                          <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                          <h2>High School Success Year: &nbsp&nbsp&nbsp&nbsp&nbsp <%= users.high_school_success_year %> </h2>
                          <h2>High School Roll Number: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= users.high_school_roll_no %>  </h2><br>

                        </div>
                      </div>
                    </div>

                  </div>
                  <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3" align="center">
                      <button class="btn btn-primary" type="submit"><a href="javascript:del()" style="color: white"> Delete</a></button>
                      <button class="btn btn-primary" type="button"><a href="/admin/users/modify/<%=users.old_stuid%>" style="color: white"> Modify </a></button>
                      <button type="button" class="btn btn-success"><a href="/admin/users/list"  style="color: white">Go to List</a></button>
                    </div>
                  </div>

                  </form>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <!-- /footer content -->
        </div>
        </div>
      </div>
    </div>

    <% include ../partial/script %>

  </body>

  <script type="text/javascript">
    function del(){
      if(confirm('Are you sure?')){
        frm.submit();
      }
    }
    <%- (messages.info) ? `alert('${messages.info}')` : '' %>
  </script>

</html>
