<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>

    <title>Student Affair</title>

  </head>
  <style media="screen">
    h3{
      color: black;
    }
    table{
      color: black;
    }
    #a1, h2{
      color: black;
    }
    th{
      background-color: darkgray;
    }
    td{
      background-color: powderblue;
    }
  </style>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title"><i class="fa fa-leaf"></i> <span>Student Affair</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <% include ../partial/menu_profile %>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <% include ../partial/sidebar %>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <% include ../partial/menu_footer %>
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <% include ../partial/top_nav %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <form class="" action="/admin/users/list" method="post">

          <div class="">

            <div class="clearfix"></div>

            <div class="row">


              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2><b>Student List Veiw</b></h2>
                    <div class="clearfix"></div>
                  </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                          <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="datatable">
                              <thead>
                                <tr>
                                  <th style="width: 5px">No</th>
                                  <th>Student ID</th>
                                  <th>Student Name</th>
                                  <th>Major</th>
                                  <th>Roll Number</th>
                                  <th>Father Name</th>
                                  <th>Phone Number</th>
                                  <th>Address</th>
                                  <th>Academic</th>
                                </tr>
                              </thead>

                              <tbody>
                                <% for(var i = 0; i < users.length; i++) { %>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><a id="a1" href="/admin/users/view/<%= users[i].old_stuid %>"> <%= users[i].student_id %></a></td>
                                  <td><a id="a1" href="/admin/users/view/<%= users[i].old_stuid %>"><%= users[i].name %></a></td>
                                  <td><%= users[i].major %></td>
                                  <td><%= users[i].roll_no %></td>
                                  <td><%= users[i].father_name %></td>
                                  <td><%= users[i].phone_no %></td>
                                  <td><%= users[i].address %></td>
                                  <td><%= users[i].academic-1 %>-<%= users[i].academic %></td>
                                </tr>
                                <% } %>
                              </tbody>
                            </table>
                          </div>

                        </div>
                    </div>


                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <% include ../partial/footer %>
        <!-- /footer content -->
      </div>
    </div>

    <% include ../partial/script %>

  </body>
</html>
