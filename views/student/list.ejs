<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>

    <title>Student Affair</title>

  </head>
  <style media="screen">
    h3{
      color: black;
    }
    table{
      color: black;
    }
    #a1{
      color: black;
    }
    th{
      background-color: darkgray;
      cursor: pointer;
    }
    td{
      background-color: powderblue;
    }
  </style>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title"><i class="fa fa-leaf"></i> <span>Student Affair</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <% include ../partial/menu_profile %>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <% include ../partial/sidebar %>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <% include ../partial/menu_footer %>
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <% include ../partial/top_nav %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">

          <div class="x_title">
            <h5><b><a href="../">Home</a> > Student Registration > <a href="/admin/users/old"> Old Student </a> > <a href="/admin/users/list">List view</a> </b></h5>
            <div class="clearfix"></div>
          </div>

          <div class="">

            <div class="clearfix"></div>

            <div class="row">
              <form class="" action="/admin/users/list" method="post">
                <input type="hidden" name="sortField" id="sortField" value="<%=sort.field%>">
                <input type="hidden" name="sortOrder" id="sortOrder" value="<%=sort.order%>">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2 style="color: black;">Student Detail Veiw</h2>

                    <div class="clearfix"></div>
                  </div>

                    <input type="search" id="search" name="keyword" value="<%= search.keyword || '' %>" style="margin-left: 16px;" placeholder="Enter to search...">
                    <input type="submit" name="" value="Search" style="color: black;">





                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                          <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                              <thead>
                                <tr>
                                  <th style="width: 5px">No</th>
                                  <th data-sort="student_id">Student ID</th>
                                  <th data-sort="name">Student Name</th>
                                  <th data-sort="roll_no">Roll Number</th>
                                  <th>Father Name</th>
                                  <th data-sort="phone_no">Phone Number</th>
                                  <th>Address</th>
                                </tr>
                              </thead>

                              <tbody>
                                <% if( users.length == 0 ) { %>
                                  <td colspan="7"> Data Not Found!</td>
                                <% } %>
                                <% for(var i = 0; i < users.length; i++) { %>
                                <tr onclick="go();">
                                  <td><%= i+1 %></td>
                                  <td><a id="a1" href="/admin/users/view/<%= users[i].old_stuid %>"> <%= users[i].student_id %></a></td>
                                  <td><a id="a1" href="/admin/users/view/<%= users[i].old_stuid %>"><%= users[i].name %></a></td>
                                  <td><%= users[i].roll_no %></td>
                                  <td><%= users[i].father_name %></td>
                                  <td><%= users[i].phone_no %></td>
                                  <td><%= users[i].address %></td>
                                </tr>
                                <% } %>
                              </tbody>
                            </table>
                          </div>

                        </div>
                    </div>


                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <% include ../partial/footer %>
        <!-- /footer content -->
      </div>
    </div>

    <% include ../partial/script %>

    <!-- Custom Theme Scripts -->
    <!-- <script src="/build/js/custom.min.js"></script> -->

  </body>
  <script type="text/javascript">
    <% function go(){ %>
      location.href = "/admin/users/view/<%= users[i].old_stuid %>"
    <% } %>
    $(function() {
      $('th').click(function () {
        if(!$(this).data('sort')) return flase;
        if($('#sortField').val() == $(this).data('sort') ){
           $('#sortOrder').val( ($('#sortOrder').val() == 'ASC') ? 'DESC':'ASC');
        }else{
          $('#sortOrder').val('ASC');
        }
        $('#sortField').val($(this).data('sort'));
        $('#frm').submit();
      })
      $('th[data-sort="<%=sort.field%>"]').append(' <%= (sort.order == 'ASC')? '\u25B2': '\u25BC' %> ');
    });
  </script>
</html>
